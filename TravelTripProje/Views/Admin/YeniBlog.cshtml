
@model TravelTripProje.Models.Sınıflar.Blog

@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
 
<br />

<div>
    <form class="form-group" method="post">

        @Html.LabelFor(o => o.Baslik)
        @Html.TextBoxFor(o => o.Baslik, new { @class = "form-control" })

        <br />

        @Html.LabelFor(o => o.Tarih)
        @Html.TextBoxFor(o => o.Tarih, new { @class = "form-control" })

        <br />

        @Html.LabelFor(o => o.BlogImage)
        @Html.TextBoxFor(o => o.BlogImage, new { @class = "form-control" })

        <br />

        @Html.LabelFor(o => o.Aciklama)
        @Html.TextAreaFor(o => o.Aciklama, new { @class = "form-control" })

        <br />


        <button class="btn btn-primary">Blog Ekle</button>


    </form>
</div>
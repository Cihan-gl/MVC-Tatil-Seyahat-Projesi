@using TravelTripProje.Models.Sınıflar
@model List<Blog>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML>
<html>

<body>


    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot" style="margin-left:250px">Tatil & Seyahat Bloğum</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restoranlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider" style="width:650px; height:365px">
                            <ul class="rslides" id="slider1">

                                @foreach (var x in Model)
                                {
                                    <li><img src="@x.BlogImage" style="width:650px; height:365px" alt=""></li>
                                }

                            </ul>
                        </div>

                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyahat Bloguna Hoşgeldiniz</h3>
                    <p>
                        Bu projeyi 2022 Şubat ayı içerisinde olduğumuz günlerde yapmış bulunmaktayım.
                        MVC5 üzerine kurulu dinamik bir web projesi geliştirmek istedim.
                        Hem Türkiye'de gezip gördüğüm hem de yurt dışında en çok merak ettiğim,
                        bir kaç yerle alakalı bilgiler vermek istedim.Keyifli zaman geçirmeniz dileğiyle.
                    </p>
                </div>


               @Html.Action("Partial1","Default")
               

                <div class="grids">
                    <div class="box1">

                        @Html.Action("Partial3", "Default")
                        @Html.Action("Partial4", "Default")


                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
